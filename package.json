{
  "version": "10.0.0",
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "scripts": {
    "build": "docker build -t ducatuscore-node . ",
    "watch": "./node_modules/.bin/lerna run watch --parallel",
    "postinstall": "npm run bootstrap && npm run compile",
    "bootstrap": "./node_modules/.bin/lerna bootstrap",
    "insight:build": "cd ./packages/insight && npm i && npm run build",
    "node": "cd packages/ducatuscore-node && npm start",
    "dws": "cd packages/ducatuscore-wallet-service && npm start",
    "compile": "./node_modules/.bin/lerna run compile",
    "lint": "lerna run lint",
    "fix": "lerna run fix",
    "precommit": "lerna run --concurrency 1 --stream precommit --since master",
    "test:ci:local": "npm run test:ci:build:local && npm run test:ci:all",
    "test:ci:build:local": "./ci.sh build local",
    "test:ci": "echo 'This command has been removed. Try running `npm run test:ci:local` to run tests locally using the test_runner docker container as before. The CI pipeline logic is now in .circleci/config.yml.'",
    "test:ci:build": "./ci.sh build ci",
    "test:ci:all": "./ci.sh 'npm run lerna:ci:all'",
    "test:ci:unit": "./ci.sh 'npm run lerna:ci:unit'",
    "test:ci:integration": "./ci.sh 'npm run lerna:ci:integration'",
    "test:ci:coverage": "./ci.sh 'npm run lerna:ci:coverage'",
    "test:ducatuscore-wallet-service": "cd ./packages/ducatuscore-wallet-service && npm run test",
    "ci:ducatuscore-wallet-service": "./ci.sh 'npm run test:ducatuscore-wallet-service'",
    "test:ducatuscore-wallet-client": "cd ./packages/ducatuscore-wallet-client && npm run test",
    "ci:ducatuscore-wallet-client": "./ci.sh 'npm run test:ducatuscore-wallet-client'",
    "test:ducatuscore-wallet": "cd ./packages/ducatuscore-wallet && npm run test",
    "ci:ducatuscore-wallet": "./ci.sh 'npm run test:ducatuscore-wallet'",
    "test:ducatuscore-crypto": "cd ./packages/ducatuscore-crypto && npm run test",
    "ci:crypto-wallet-core": "./ci.sh 'npm run test:crypto-wallet-core'",
    "test:ducatuscore-node": "cd ./packages/ducatuscore-node && npm run test",
    "test:ducatuscore-node:coverage": "cd ./packages/ducatuscore-node && npm run coverage",
    "test:ducatuscore-node:int": "cd ./packages/ducatuscore-node && npm run test:integration",
    "ci:ducatuscore-node": "./ci.sh 'npm run test:ducatuscore-node'",
    "ci:ducatuscore-node:int": "./ci.sh 'npm run test:ducatuscore-node:int'",
    "ci:ducatuscore-node:coverage": "./ci.sh 'npm run test:ducatuscore-node:coverage'",
    "test:ducatuscore-lib": "cd ./packages/ducatuscore-lib && npm run test",
    "ci:ducatuscore-lib": "./ci.sh 'npm run test:ducatuscore-lib'",
    "test:ducatuscore-lib-cash": "cd ./packages/ducatuscore-lib-cash && npm run test",
    "ci:ducatuscore-lib-cash": "./ci.sh 'npm run test:ducatuscore-lib-cash'",
    "test:ducatuscore-p2p": "cd ./packages/ducatuscore-p2p && npm run test",
    "ci:ducatuscore-p2p": "./ci.sh 'npm run test:ducatuscore-p2p'",
    "test:ducatuscore-p2p-cash": "cd ./packages/ducatuscore-p2p-cash && npm run test",
    "ci:ducatuscore-p2p-cash": "./ci.sh 'npm run test:ducatuscore-p2p-cash'",
    "test:ducatuscore-mnemonic": "cd ./packages/ducatuscore-mnemonic && npm run test",
    "ci:ducatuscore-mnemonic": "./ci.sh 'npm run test:ducatuscore-mnemonic'",
    "lerna:ci:all": "npx lerna run test:ci --concurrency 1 --stream",
    "lerna:ci:unit": "npx run test:ci:unit --concurrency 1 --stream",
    "lerna:ci:integration": "npx run test:ci:integration --concurrency 1 --stream",
    "lerna:ci:coverage": "npx run coverage --concurrency 1 --stream"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "devDependencies": {
    "cz-customizable": "^5.2.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^2.4.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.0",
    "typescript-eslint-parser": "^15.0.0"
  },
  "dependencies": {
    "lerna": "^3.22.1",
    "typescript": "4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
